@using System.Globalization
@using Group11.Models
@model IEnumerable < Group11.Models.Tailieu >
    @{ ViewBag.Title = "Ielts"; 
        Layout = "~/Views/Shared/_Layout_HV.cshtml"; }

<style>
    .discount {
        position: absolute;
        font-size: 16px;
        background-color: red;
        color: white;
        top: 0px;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        text-align: center;
        line-height: 60px;
        left: -10px;
    }

    .status {
        position: absolute;
        font-size: 16px;
        background-color: red;
        color: white;
        padding: 7px 15px;
        top: 12px;
        right: 10px;
    }
</style>
<link href="~/CSS/tltoeic ad.css" rel="stylesheet" />

<div class="container-fluid">
    <h1 class="text-center">Tài Liệu Học Viên</h1>
    <hr />
    <div class="row" style="margin-top: 2rem;">
        <div class="col-sm-4">
            <div class="search-hotel">
                <h3 class="agileits-sear-head">Tìm Kiếm</h3>
                <form action="#" method="post">
                    <input type="search" placeholder="Tên tài liệu..." name="search" required="">
                    <button>Tìm</button>
                </form>
            </div>

            <!-- food preference -->
            <div class="left-side">
                <h3 class="agileits-sear-head">Chọn loại tài liệu</h3>
                <ul>
                    <li>
                        <input type="checkbox" class="checked">
                        <span class="span">Tính phí</span>
                    </li>
                    <li>
                        <input type="checkbox" class="checked">
                        <span class="span">Không tính phí</span>
                    </li>

                </ul>
                <!-- price range -->
                <div class="range">
                    <div class="search-hotel">
                        <h3 class="agileits-sear-head">Khoảng Gía</h3>
                        <form action="#" method="post">
                            <input type="search" placeholder="Gía..." name="search" required="">
                            <button>Tìm</button>
                        </form>
                    </div>
                </div>
                <!-- //price range -->
            </div>
            <div id="small-dialog1" class="mfp-hide">
                <div class="select-city">
                    <h3>Khóa học</h3>
                    <select class="list_of_cities">

                        <optgroup label="Ielts">

                            <option>Reading</option>
                            <option>Writting</option>
                            <option>Listening</option>
                            <option>Speaking</option>
                        </optgroup>
                        <optgroup label="Toeic">
                            <option>Reading</option>
                            <option>Speaking</option>
                        </optgroup>
                        <optgroup label="Giao Tiếp">
                            <option>Cơ bản</option>
                            <option>Cho người mất gốc</option>
                            <option>Cho người đi làm</option>




                        </optgroup>
                    </select>
                </div>
            </div>
            <div id="small-dialog1" class="mfp-hide">
                <div class="select-city">
                    <h3>Sắp xếp</h3>
                    <select class="list_of_cities">

                        <optgroup label="Thứ tự">

                            <option>A-Z</option>
                            <option>Z-A</option>

                        </optgroup>
                        <optgroup label="Được xem nhiều nhất"></optgroup>
                        <optgroup label="Xem gần đây"></optgroup>
                    </select>
                </div>
            </div>





            <!-- //discounts -->
            <!-- reviews -->
            <div class="customer-rev left-side">
                <h3 class="agileits-sear-head">Đánh Gía</h3>
                <ul>
                    <li>
                        <a href="#">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <span>5.0</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>4.0</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-half-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>3.5</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>3.0</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star" aria-hidden="true"></i>
                            <i class="fa fa-star-half-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <i class="fa fa-star-o" aria-hidden="true"></i>
                            <span>2.5</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
            <div class="col-sm-8 ">
                <div class=" container-fluid">
                    <div class="row">
                        <ul class="nav nav-tabs" role="tablist" id="myTab">

                            <li class="active"><a href="#home" role="tab" data-toggle="tab">All</a></li>



                        </ul>

                        <br />

                        <div class="tab-content ">

                            <div class="tab-pane active" id="home">

                                <div class="row thumbnail">


                                    @foreach (var item in Model)
                                    {
                                        <div class="col-lg-4 col-sm-6 col-md-4">
                                            <div class="card" style="width:auto">
                                                <a href="#">
                                                    <div class="thumbnail">
                                                        @Html.ShowImage(item.Picture)
                                                        <div class="add-to-cart" style="text-align: center;">
                                                            <a href="AddToCart/@item.ID" class="glyphicon glyphicon-plus-sign" data-toggle="tooltip" data-placement="top" title="Add to cart" style="font-size: 32px; top:-17px; z-index: 99999;"></a>
                                                        </div>
                                                        <div class="caption">
                                                            <h4 class="pull-right">@item.Price.ToString("C0", new CultureInfo("vi-VN"))</h4>
                                                            <h4>
                                                                <a href="#">@item.Title</a>
                                                            </h4>
                                                            <p class="movie-description">
                                                                @item.Sumary
                                                            </p>
                                                            <div class="ratings">
                                                                <p class="pull-right">
                                                                    <a href="product.html#comments">15 reviews</a>
                                                                </p>

                                                            </div>
                                                            <div class="row stock-days">
                                                                <div class="col-lg-8 col-sm-12">
                                                                    <div class="progress">
                                                                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 80%;">
                                                                            Sắp bán hết
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="col-lg-4 col-sm-12 padding-0" style="padding-right: 10px;">
                                                                    <p class="pull-right">
                                                                        0 ngày 02:36:10
                                                                    </p>
                                                                </div>
                                                            </div>
                                                            <div class="status pull-right">New</div>
                                                            <div class="discount ">19%</div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>


